<h2 class="text-success d-flex p-2 justify-content-center">ログイン</h2>

<%= form_with model: @agency, url: agency_session_path, class: 'p-5 mb-2 bg-light', local:true do |f| %>
  <div class="field mx-auto p-2" style="width: 200px;">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "border border-2 rounded-3", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mx-auto p-2" style="width: 200px;">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "border border-2 rounded-3", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mx-auto p-2" style="width: 200px;">
      <%= f.check_box :remember_me, class: "border border-2 rounded-3" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions d-flex p-2 justify-content-center">
    <%= f.button "ログイン", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
